    <com.payam1991gr.chart.tool.ChartLabel
        android:id="@+id/chart1Label"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/chart1"
        app:layout_constraintLeft_toLeftOf="@+id/chart1"
        app:layout_constraintRight_toRightOf="@+id/chart1"
        app:layout_constraintTop_toTopOf="@+id/chart1" />

    <com.payam1991gr.chart.tool.ChartTooltip
        android:id="@+id/chart1Tooltip"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/chart1"
        app:layout_constraintLeft_toLeftOf="@+id/chart1"
        app:layout_constraintRight_toRightOf="@+id/chart1"
        app:layout_constraintTop_toTopOf="@+id/chart1" />

    <com.payam1991gr.chart.tool.ChartView
